<!DOCTYPE html>
<html lang="en">
<head>
    {control metaTags}
    {control metaTitle}

    {block styles}
        <link rel="stylesheet" href="{$basePath}/assets/css/public-bootstrap.css?v={$assetsVersion}">
        <link rel="stylesheet" href="{$basePath}/assets/css/nittro.min.css?v={$assetsVersion}">
        <link rel="stylesheet" href="{$basePath}/assets/css/public.css?v={$assetsVersion}">

        <script type="text/javascript" src="{$basePath}/assets/js/original/nittro.min.js?v={$assetsVersion}" async defer></script>
    {/block}
</head>
<body>
    <div id="content-wrapper">
        <header class="forum-title">
            <h1><a href="{plink :Category:Public:Homepage:default}">{$globalSettings['forumTitle']}</a></h1>
        </header>

        <div class="content">
            {include #content}
        </div>
    </div>

    {block scripts}
    {/block}

    {snippet flashMessages}
        <script type="application/json" class="flashes-src">{$flashSession}</script>
    {/snippet}
</body>
</html>